<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_toolbar_bg_rl"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <ImageView
        android:id="@+id/custom_toolbar_left_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_back"/>

    <TextView
        android:id="@+id/custom_toolbar_left_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textColor="#222222"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="徐汇安心小店"/>

    <TextView
        android:id="@+id/custom_toolbar_left_subTitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:maxLines="2"
        android:ellipsize="end"
        android:maxWidth="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="30dp"
        android:textColor="#222222"
        android:textSize="14sp"
        tools:text="左侧副标题"/>

    <TextView
        android:id="@+id/custom_toolbar_center_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#222222"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:maxWidth="150dp"
        android:textSize="18sp"
        tools:text="标题标题标题标题标题标题"/>

    <TextView
        android:id="@+id/custom_toolbar_right_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:textColor="#222222"
        android:textSize="14sp"
        tools:text="菜单" />

    <ImageView
        android:id="@+id/custom_toolbar_right_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>

    <View
        android:id="@+id/custom_toolbar_baseline_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#F0F0F0"/>
</RelativeLayout>