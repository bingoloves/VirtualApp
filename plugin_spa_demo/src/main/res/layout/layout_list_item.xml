<?xml version="1.0" encoding="utf-8"?>
<com.bingoloves.plugin_core.widget.alpha.XUIAlphaRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:clickable="true"
    android:padding="10dp">
    <ImageView
        android:id="@+id/iv_menu_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_classify"/>
    <TextView
        android:id="@+id/tv_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_menu_icon"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textColor="@android:color/black"
        android:text="菜单"/>
</com.bingoloves.plugin_core.widget.alpha.XUIAlphaRelativeLayout>